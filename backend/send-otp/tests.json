{
  "tests": [
    {
      "name": "OPTIONS preflight",
      "method": "OPTIONS",
      "path": "/",
      "expectedStatus": 200
    },
    {
      "name": "POST without email",
      "method": "POST",
      "path": "/",
      "body": {},
      "expectedStatus": 400,
      "expectedBody": {"error": "string"},
      "bodyMatcher": "partial"
    },
    {
      "name": "POST with invalid email",
      "method": "POST",
      "path": "/",
      "body": {"email": "notanemail"},
      "expectedStatus": 400,
      "expectedBody": {"error": "string"},
      "bodyMatcher": "partial"
    },
    {
      "name": "GET not allowed",
      "method": "GET",
      "path": "/",
      "expectedStatus": 405,
      "expectedBody": {"error": "string"},
      "bodyMatcher": "partial"
    }
  ]
}
