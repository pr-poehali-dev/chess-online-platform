{
  "tests": [
    {
      "name": "OPTIONS preflight",
      "method": "OPTIONS",
      "path": "/",
      "expectedStatus": 200
    },
    {
      "name": "POST without data",
      "method": "POST",
      "path": "/",
      "body": {},
      "expectedStatus": 400,
      "expectedBody": {"error": "string"},
      "bodyMatcher": "partial"
    },
    {
      "name": "POST with wrong code",
      "method": "POST",
      "path": "/",
      "body": {"email": "test@test.com", "code": "000000"},
      "expectedStatus": 400,
      "expectedBody": {"error": "string"},
      "bodyMatcher": "partial"
    },
    {
      "name": "POST login mode with wrong code",
      "method": "POST",
      "path": "/",
      "body": {"email": "test@test.com", "code": "000000", "mode": "login"},
      "expectedStatus": 400,
      "expectedBody": {"error": "string"},
      "bodyMatcher": "partial"
    },
    {
      "name": "GET not allowed",
      "method": "GET",
      "path": "/",
      "expectedStatus": 405,
      "expectedBody": {"error": "string"},
      "bodyMatcher": "partial"
    }
  ]
}